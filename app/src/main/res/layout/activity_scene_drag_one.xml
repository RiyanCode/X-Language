<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg_scene_one"
    android:background="@drawable/gradient_list"
    tools:context=".type_learn.SceneDrag_One">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scene_one_top"
        android:translationY="-36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="level"
        android:id="@+id/display_level_scene_one"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelBarSceneOne" />

    <ProgressBar
        android:id="@+id/levelBarSceneOne"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="155dp"
        android:layout_height="15dp"
        android:max="100"
        android:progress="30"
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.010" />

    <ImageView
        android:id="@+id/logo_timer"
        android:layout_width="30dp"

        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/time_dur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056"
        app:tint="@color/white" />


    <TextView
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/logo_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/logo_timer"
        app:layout_constraintTop_toTopOf="@+id/logo_timer" />
        <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="shape_background.json"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/background_shape"
        android:visibility="invisible"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="pulse_black.json"
        android:id="@+id/circle_one"
        app:layout_constraintLeft_toLeftOf="@id/imageViewSceneOne"
        app:layout_constraintRight_toRightOf="@id/imageViewSceneOne"
        app:layout_constraintTop_toTopOf="@id/imageViewSceneOne"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSceneOne"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="invisible"
        android:scaleX="1.8"

        app:lottie_colorFilter="@color/black"
        android:scaleY="1.8"
        />    <ImageView
        android:id="@+id/imageViewSceneOne"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/astrology"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"

        app:tint="@color/white" />


    <TextView

        android:id="@+id/englishTextSceneOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="astrology"
        android:textColor="@color/white"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/imageViewSceneOne"
        app:layout_constraintRight_toRightOf="@id/imageViewSceneOne"
        app:layout_constraintTop_toBottomOf="@id/imageViewSceneOne" />


    <TextView
        android:id="@+id/japanRomajiSceneOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"

        android:text="romaji and dsa text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/englishTextSceneOne"
        app:layout_constraintVertical_bias="0.0" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_fileName="pulse_black.json"
        android:id="@+id/background_dropArea"
        app:layout_constraintLeft_toLeftOf="@id/dropAreaUnderstand"
        app:layout_constraintRight_toRightOf="@id/dropAreaUnderstand"
        app:layout_constraintTop_toTopOf="@id/dropAreaUnderstand"
        app:layout_constraintBottom_toBottomOf="@id/dropAreaUnderstand"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="invisible"
        app:lottie_colorFilter="@color/black"
        android:scaleX="1.0"
        android:scaleY="1.0"
        />
    <ImageView
        android:id="@+id/dropAreaUnderstand"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/understand_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/japanRomajiSceneOne"
        app:layout_constraintVertical_bias="0.924"
        app:tint="@color/white" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="answer_true.json"
        app:layout_constraintLeft_toLeftOf="@id/imageViewSceneOne"
        app:layout_constraintRight_toRightOf="@id/imageViewSceneOne"
        app:layout_constraintTop_toTopOf="@id/imageViewSceneOne"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSceneOne"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:id="@+id/verified_true"
        app:lottie_autoPlay="true"
        android:visibility="invisible"
        app:lottie_progress="@integer/material_motion_duration_medium_1"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="512dp"
        android:layout_height="512dp"
        app:lottie_fileName="answer_failed.json"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_progress="@integer/material_motion_duration_long_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/verified_false"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>